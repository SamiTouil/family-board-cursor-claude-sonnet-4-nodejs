# Production Environment Variables
# Copy this file to .env on your EC2 instance and fill in the values

# Database Configuration
DATABASE_URL="postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/familyboard"

# Security
JWT_SECRET="your-super-secure-jwt-secret-key-must-be-at-least-32-characters-long"

# Application Configuration
NODE_ENV="production"
PORT="3001"

# Frontend Configuration  
VITE_API_URL="https://your-domain.com"

# SSL Configuration
SSL_EMAIL="your-email@example.com"

# Optional: Monitoring and Logging
LOG_LEVEL="info"
ENABLE_LOGGING="true" 