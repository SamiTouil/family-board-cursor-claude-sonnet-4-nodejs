# Frontend Environment Variables
# Copy this file to .env and update the values
# WARNING: These variables are PUBLIC and bundled into the build!
# NEVER put secrets or sensitive data here!

# API Configuration - DEVELOPMENT
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001

# Security Configuration
# CSRF validation - controlled by root .env DISABLE_CSRF_VALIDATION variable
VITE_DISABLE_CSRF_VALIDATION=${DISABLE_CSRF_VALIDATION:-false}

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Application Info
VITE_APP_NAME=Family Board
VITE_APP_VERSION=1.0.0

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,fr

# Public API Keys (if needed)
# VITE_GOOGLE_MAPS_API_KEY=your-public-api-key
# VITE_SENTRY_DSN=https://public-key@sentry.io/project

# Environment-specific settings
# VITE_ENVIRONMENT=development