# Production Environment Variables
# Copy this file to .env.production on your production server

# Security Configuration
# Set to false for production (CSRF enabled)
DISABLE_CSRF_VALIDATION=false

# PostgreSQL Database
POSTGRES_DB=familyboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-production-password-here

# Backend Security
JWT_SECRET=your-super-secure-jwt-secret-here-at-least-32-characters
BCRYPT_ROUNDS=12

# Frontend Configuration
FRONTEND_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com

# Rate Limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr
