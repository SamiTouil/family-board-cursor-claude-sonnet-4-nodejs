# Database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/family_board

# JWT configuration (REQUIRED - Must be changed in production)
JWT_SECRET=change-this-to-a-secure-random-string

# Optional: Environment
NODE_ENV=development

# Optional: Server configuration
PORT=3000

# Optional: CORS configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Redis for token blacklisting (defaults to redis://localhost:6379)
REDIS_URL=redis://localhost:6379