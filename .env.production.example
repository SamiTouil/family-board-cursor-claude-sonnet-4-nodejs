# Family Board - Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# This file should be placed on your Windows production machine

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=familyboard
POSTGRES_USER=postgres
# IMPORTANT: Change this to a strong password!
POSTGRES_PASSWORD=your-super-secure-database-password-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# IMPORTANT: Generate a strong JWT secret (at least 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Your domain name or IP address
FRONTEND_URL=https://your-domain.com
# Alternative: http://192.168.1.100:3000 for local network access

# Allowed origins for CORS (comma-separated)
# Include your domain, local IP, and mobile app origins
ALLOWED_ORIGINS=https://your-domain.com,http://192.168.1.100:3000,exp://192.168.1.100:8081

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Temporarily disable CSRF validation if needed during setup
DISABLE_CSRF_VALIDATION=false

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting window in minutes
API_RATE_LIMIT_WINDOW=15
# Maximum requests per window
API_RATE_LIMIT_MAX=100

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr

# =============================================================================
# OPTIONAL: SSL/NGINX CONFIGURATION
# =============================================================================
# If using the nginx service for SSL termination
# SSL_CERT_PATH=/path/to/your/certificate.crt
# SSL_KEY_PATH=/path/to/your/private.key

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# Directory for database backups (will be created if it doesn't exist)
BACKUP_DIR=./backups

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Enable health checks and monitoring
ENABLE_HEALTH_CHECKS=true
